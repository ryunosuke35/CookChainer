<h3>お気に入り一覧</h3>


<div class="favorite_index">

  <table>
    <% @favorites.each do |favorite| %>
      <tr>
        <div class="user">
          <td>
            <div class="icon_image">
              <% if favorite.user.image.present? %>
                <%= link_to image_tag(favorite.user.image.url), user_path(favorite.user.id) %>
              <% else %>
                <%= link_to image_tag('default_user_image.png'), user_path(favorite.user.id) %>
              <% end %>
            </div>
          </td>
        </div>
        <td>
          <div class="cook_image">
            <%= image_tag favorite.image.url if favorite.image.present? %>
          </div>
        </td>
        <td><%= link_to "#{favorite.name}", post_path(favorite) %></td>
      </tr>
    <% end %>
  </table>

  <%= link_to '戻る', user_path(current_user) %>
</div>
