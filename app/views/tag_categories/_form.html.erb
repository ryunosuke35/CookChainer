<%= form_with(model: tag_category, local: true) do |form| %>
  <% if tag_category.errors.any? %>
    <div id="error_explanation">
      <ul>
      <% tag_category.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="cp_iptxt">
    <%= form.text_field :name, class:"ef" %>
    <%= form.label :name %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
