<h1>Posts</h1>

<% user = current_user %>
<h3>レベル:<%= user.level %></h3>
<h3>経験値:<%= user.exp_point %></h3><br>
<h3>次のレベル:<%= user.level + 1 %></h3>
<h3>必要経験値:<%= @levelSetting.thresold - user.exp_point %></h3><br>

<% exp_ratio = (user.exp_point.to_f / @levelSetting.thresold.to_f) * 100 %>

<h3>経験値の割合:<%= exp_ratio.round %>%</h3>

<div style="width: 200px">
  <div style="background-color: #41A077; border-radius: 4px;">
    <div style="background-color: #61EDB0; border-radius: 4px; height:6px; width:<%= exp_ratio %>%"></div>
  </div>
</div>

    <% @array = {} %>

    <% @posts.each_with_index do |post, id| %>
      <%= content_tag :div, id: "box_#{id}" do %>
        <h4><%= link_to "#{post.name}", post_path(post) %></h4>
        <p><%= image_tag post.image.url if post.image.present? %></p>
        <% post.tags.each do |tag| %>
          <li><%= tag.name %></li>
        <% end %>
      <% end %>

      <% if @posts[id + 1].present? %>
        <% array1 = post.tags.pluck(:name) %>
        <% array2 = @posts[id + 1].tags.pluck(:name) %>
        <% a = array1.concat(array2) %>
        <% b = a.uniq %>
        <% if a.length != b.length %>
          <% match = true %>
        <% else %>
          <% match = false %>
        <% end %>
        <% @array[id] = match %>
      <% end %>

      <%= javascript_tag do %>
        var data = <%= @array.to_json.html_safe %>
      <% end %>
    <% end %>


    <% @chain_array = []
    chain = 0
    @array.each { |key, value|
      if value
        chain += 1
      else
        chain = 0
      end
      @chain_array << chain
    } %>

    <h3>連鎖数</h3>
    <%= @chain_array.max %>
