<h3><%= t('.sign_in') %></h3>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="cp_iptxt">
    <%= f.text_field :name, autocomplete: "name", class:"ef" %>
    <%= f.label :name %>
    <span class="focus_line"><i></i></span>
  </div>

  <div class="cp_iptxt">
    <%= f.email_field :email, autocomplete: "email", class:"ef" %>
    <%= f.label :email %>
    <span class="focus_line"><i></i></span>
  </div>

  <div class="cp_iptxt">
    <%= f.password_field :password, autocomplete: "current-password", class:"ef" %>
    <%= f.label :password %>
    <span class="focus_line"><i></i></span>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit t('.sign_in') %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
