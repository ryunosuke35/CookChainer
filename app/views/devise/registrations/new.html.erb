<h3><%= t('.sign_up') %></h3>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="cp_iptxt">
    <%= f.text_field :name, autofocus: true, autocomplete: "name", class:"form-control", class:"ef" %>
    <%= f.label :name %><br/>
  </div>

  <div class="cp_iptxt">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", class:"ef", style: "width: 400px; padding-left: 122px;" %>
    <%= f.label :email %><br/>
  </div>

  <div class="cp_iptxt">
    <%= f.password_field :password, autocomplete: "new-password", class:"form-control", class:"ef", style: "width: 400px; padding-left: 122px;" %>
    <%= f.label :password %>
  </div>

  <div class="cp_iptxt">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control", class:"ef", style: "width: 400px; padding-left: 122px;" %>
    <%= f.label :password_confirmation %><br/>
  </div>

  <div class="actions">
    <%= f.submit t('.sign_up') %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
