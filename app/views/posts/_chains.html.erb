<div class="chains">
  <% chain_array = []
  chain = 0
  @array.each { |key, value|
    if value
      chain += 1
    else
      chain = 0
    end
    chain_array << chain
  } %>
  <div>
    <% if chain_array.empty? %>
      <h4>連鎖回数：0回</h4>
    <% else %>
      <h4>連鎖記録：<%= chain_array.max %>回</h4>
    <% end %>
  </div>
</div>
