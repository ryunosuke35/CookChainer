<h3>タグ</h3>

<table>
  <% @tag_categories.each do |tag_category| %>

    <thead>
      <tr>
        <th><%= tag_category.name %></th>
      </tr>
    </thead>

    <tbody>
      <% tag_category.tags.each do |tag| %>
        <tr>
          <td><%= tag.name %></td>
          <td><div class="button01"><%= link_to '編集', edit_tag_path(tag) %></div></td>
          <td><div class="button02"><%= link_to '削除', tag, method: :delete, data: { confirm: "「#{tag.name}」を削除しますか？" } %></div></td>
        </tr>
      <% end %>
    </tbody>

  <% end %>
</table>

<br>

<%= link_to 'タグを作成する', new_tag_path %>
