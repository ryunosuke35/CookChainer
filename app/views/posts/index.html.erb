<div class="post_index">

  <div class="level_display">
    <% user = current_user %>
    <div class="user_level">Lv.<%= user.level %></div>
    <div class="exp_ratio2"><%= user.exp_point %>/<%= @next_level.thresold %></div>
    <div class="exp_ratio">
      <% a = @next_level.thresold - user.exp_point %>
      <% b = @next_level.thresold - @now_level.thresold %>
      <% exp_ratio = ((1 - a.to_f / b.to_f) * 100).round %>
      <div><%= exp_ratio %>%</div>
    </div>
    <div class="exp_bar">
      <div style="width: 80%;">
        <div style="background-color: #808080; border-radius: 3px;">
          <div style="background-color: #669eff; border-radius: 3px; height:13px; width:<%= exp_ratio %>%"></div>
        </div>
      </div>
    </div>
  </div>




  <div class="posts">
    <% @array = {} %>
    <% if @posts.present? %>
      <% @posts.each_with_index do |post, id| %>
        <%= content_tag :div, id: "box_#{id}" do %>
          <% if post.categories.empty? %>
            <%= link_to "#{post.name}", post_path(post) %>
          <% else %>
            <% post.categories.each do |category| %>
              <% if category.name == "主菜" %>
                <% name = "red" %>
              <% elsif category.name == "副菜" %>
                <% name = "blue" %>
              <% elsif category.name == "汁もの" %>
                <% name = "yellow" %>
              <% elsif category.name == "主食" %>
                <% name = "gray" %>
              <% elsif category.name == "デザート" %>
                <% name = "pink" %>
              <% elsif category.name == "その他"%>
                <% name = "black" %>
              <% end %>
              <%= content_tag :div, class: "#{name}" do %>
                <%= link_to "#{post.name}", post_path(post) %>
              <% end %>
          <% end %>
        <% end %>
        <%= image_tag post.image.url if post.image.present? %>
        <div class="tag_list">
          <% post.tags.each do |tag| %>
              <li><%= tag.name %></li>
            <% end %>
          </div>
        <% end %>
        <% if @posts[id + 1].present? %>
          <% array1 = post.tags.pluck(:name) %>
          <% array2 = @posts[id + 1].tags.pluck(:name) %>
          <% array = array1.concat(array2) %>
          <% array_uniq = array.uniq %>
          <% duplicate_element_array = [] %>
          <% array_uniq.each do |element| %>
            <% if array.grep(element).size > 1 %>
              <% duplicate_element_array.push(element) %>
            <% end %>
          <% end %>
          <% if duplicate_element_array.present? %>
            <p class="conecting_name"><%= duplicate_element_array[0] %></p>
          <% else %>
            <p class="conecting_name">　</p>
          <% end %>
          <% if array.length != array_uniq.length %>
            <% match = true %>
          <% else %>
            <% match = false %>
          <% end %>
          <% @array[id] = match %>
        <% end %>
        <%= javascript_tag do %>
          var data = <%= @array.to_json.html_safe %>
        <% end %>
      <% end %>
    <% else %>
      <h1 class="guide">投稿ボタンから料理を投稿して、記録に残してみよう！</h1>
    <% end %>
  </div>

  <div class="chains">
    <% @chain_array = []
    chain = 0
    @array.each { |key, value|
      if value
        chain += 1
      else
        chain = 0
      end
      @chain_array << chain
    } %>
    <div>
      <% if @chain_array.empty? %>
        <p>連鎖回数：0回</p>
      <% else %>
        <p>連鎖記録：<%= @chain_array.max %>回</p>
      <% end %>
    </div>
  </div>
</div>
