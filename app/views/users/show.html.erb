<div class="user_show">
  <div class="user_info">

    <% if @user.image.present? %>
      <%= image_tag @user.image.url %>
    <% else %>
      <%= image_tag 'default_user_image.png' %>
    <% end %>

    <div class="level_display">
      <% user = current_user %>
      <div class="user_level">Lv.<%= user.level %></div>
      <div class="exp_ratio"><%= user.exp_point %>/<%= @next_level.thresold %></div>
      <div class="exp_ratio2">
        <% a = @next_level.thresold - user.exp_point %>
        <% b = @next_level.thresold - @now_level.thresold %>
        <% exp_ratio = ((1 - a.to_f / b.to_f) * 100).round %>
        <div><%= exp_ratio %>%</div>
      </div>
      <div class="exp_bar">
        <div style="width: 80%;">
          <div style="background-color: #808080; border-radius: 3px;">
            <div style="background-color: #669eff; border-radius: 3px; height:13px; width:<%= exp_ratio %>%"></div>
          </div>
        </div>
      </div>
    </div>

    <p class="name">名前：<%= @user.name %></p>
    <p class="profile">プロフィール<br><%= @user.profile %></p>
    <% if @user == current_user %>
      <p><%= link_to "お気に入り一覧", favorites_path %></p>
      <p><%= link_to "プロフィール編集", edit_user_path(@user.id) %></p>
      <% if current_user.admin == true %>
        <p><%= link_to "管理者画面", rails_admin_path %></p>
      <% end %>
      <p><%= link_to "退会", user_path(@user.id), method: :delete, data: { confirm: '退会するとデータは削除されます。よろしいですか？' } %></p>
    <% end %>
  </div>

  <div class="user_record">
    <div class="posts">
      <% @array = {} %>

      <% if @posts.present? %>
        <% @posts.each_with_index do |post, id| %>
          <%= content_tag :div, id: "box_#{id}" do %>

            <%# 料理名 %>
            <% if post.categories.empty? %>
              <% name = "no_category" %>
            <% else %>
              <% post.categories.each do |category| %>
                <% if category.name == "主菜" %>
                  <% name = "red" %>
                <% elsif category.name == "副菜" %>
                  <% name = "green" %>
                <% elsif category.name == "汁もの" %>
                  <% name = "yellow" %>
                <% elsif category.name == "主食" %>
                  <% name = "purple" %>
                <% elsif category.name == "デザート" %>
                  <% name = "blue" %>
                <% elsif category.name == "その他"%>
                  <% name = "gray" %>
                <% end %>
              <% end %>
            <% end %>
            <%= content_tag :div, class: "#{name}" do %>
              <%= link_to "#{post.name}", post_path(post) %>
            <% end %>

            <%# 画像とタグ %>
            <% if post.image.present? %>
              <%= image_tag post.image.url %>
            <% else %>
              <%= image_tag 'default_cook_image.png' %>
            <% end %>
            <div class="tag_list">
              <% post.tags.each do |tag| %>
                <li><%= tag.name %></li>
              <% end %>
            </div>
          <% end %>

          <%# 計算 %>
          <% if @posts[id + 1].present? %>
            <% array1 = post.tags.pluck(:name) %>
            <% array2 = @posts[id + 1].tags.pluck(:name) %>
            <% array = array1.concat(array2) %>
            <% array_uniq = array.uniq %>
            <% if array.length != array_uniq.length %>
              <% match = true %>
            <% else %>
              <% match = false %>
            <% end %>
            <% @array[id] = match %>
            <% conecting_name_array = [] %>
            <% array_uniq.each do |element| %>
              <% if array.grep(element).size > 1 %>
                <% conecting_name_array.push(element) %>
              <% end %>
            <% end %>
            <% if conecting_name_array.present? %>
            <div class="conect">
              <p ><%= conecting_name_array[0] %></p>
            </div>
            <% else %>
              <p class="not_conect">　</p>
            <% end %>
          <% end %>
          <%= javascript_tag do %>
            var data = <%= @array.to_json.html_safe %>
          <% end %>
        <% end %>
      <% else %>
        <h1 class="guide">投稿ボタンから料理を投稿して、記録に残してみよう！</h1>
      <% end %>
    </div>

    <div class="chains">
      <% chain_array = []
      chain = 0
      @array.each { |key, value|
        if value
          chain += 1
        else
          chain = 0
        end
        chain_array << chain
      } %>
      <div>
        <% if chain_array.empty? %>
          <h4>連鎖回数：0回</h4>
        <% else %>
          <h4>連鎖記録：<%= chain_array.max %>回</h4>
        <% end %>
      </div>
    </div>

  </div>
</div>
