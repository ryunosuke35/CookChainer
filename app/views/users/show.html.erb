<div class="user_show">
  <div class="left_side">
    <% if @user.image.present? %>
      <%= image_tag @user.image.url %>
    <% else %>
      <%= image_tag 'default_image.png' %>
    <% end %>
    <p>名前：<%= @user.name %></p>
    <p>メールアドレス：<%= @user.email %></p>
  </div>

  <div class="user_info">
    <p>プロフィール：<%= @user.profile %></p>

    <% if @user == current_user %>
      <%= link_to "プロフィール編集", edit_user_path(@user.id) %>
      <%= link_to "退会", user_path(@user.id), method: :delete %>
    <% end %>

  </div>

  <%= render 'posts/level' %>
</div>
