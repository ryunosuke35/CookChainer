<h2><%= t('.sign_in') %></h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="cp_iptxt">
    <%= f.text_field :name, autofocus: true, autocomplete: "name", class:"ef" %>
    <%= f.label :name %><br />
  </div>

  <div class="cp_iptxt">
    <%= f.text_field :email, autofocus: true, autocomplete: "email", class:"ef" %>
    <%= f.label :email %><br />
  </div>

  <div class="cp_iptxt">
    <%= f.text_field :password, autocomplete: "current-password", class:"ef" %>
    <%= f.label :password %><br />
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit t('.sign_in') %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
